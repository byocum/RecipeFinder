@model RecipeFinder.Models.Recipe
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<body>
    <div class="pageMargin">
        <header>
            <p class="titleText">@Html.DisplayFor(model => model.Name)</p>
        </header>
        <article>
            <div class="row d-block">
                <div class="col-lg-8 col-md-8 col-sm-12 float-right rightColumnGutter">
                    <img class="img-fluid" src="~/Images/@Model.Picture" />
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 float-left leftColumnGutter">
                    <p class="subtitleText">DETAILS</p>
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.PrepTime)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.PrepTime)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.BakeTime)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.BakeTime)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Servings)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Servings)
                        </dd>
                    </dl>

                    <p class="subtitleText">INGREDIENTS</p>

                    @foreach (var recipeIngredient in Model.RecipeIngredients)
                    {
                        if (recipeIngredient.IngredientNameId == recipeIngredient.IngredientNameId)
                        {
                            if (recipeIngredient.IsIngredientNamePlural)
                            {
                                @recipeIngredient.Amount @recipeIngredient.Ingredient.NamePlural;
                                @:<br />
                            }
                            else
                            {
                                @recipeIngredient.Amount @recipeIngredient.Ingredient.IngredientNameId;
                                @:<br />
                            }

                        }
                    }

                </div>


                <div class="col-lg-8 col-md-8 col-sm-12 float-right">
                    <p class="subtitleText">DIRECTIONS</p>
                    <div>
                        @foreach (string line in ViewBag.RecipeDirections)
                        {
                            @line
                            <br />
                        }
                    </div>
                </div>                
                <div class="col-lg-4 col-md-4 col-sm-12 float-left">
                    This is the blank div
                </div>
            </div>
        </article>
    </div>
</body>
